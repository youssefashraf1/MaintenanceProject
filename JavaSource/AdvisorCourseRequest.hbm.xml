<hibernate-mapping package="org.unitime.timetable.model">
    <class name="AdvisorCourseRequest" table="advisor_crsreq">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>

        <many-to-one
            name="student"
            class="Student"
            column="student_id"
            foreign-key="fk_advisor_crsreq_student"
            not-null="true"/>

        <property
            name="priority"
            column="priority"
            type="java.lang.Integer"
            not-null="true"
            length="10"/>

        <property
            name="substitute"
            column="substitute"
            type="java.lang.Boolean"
            not-null="true"/>

        <property
            name="alternative"
            column="alternative"
            type="java.lang.Integer"
            not-null="true"
            length="10"/>

        <property
            name="timestamp"
            column="time_stamp"
            type="java.util.Date"
            not-null="true"/>
            
        <property
            name="changedBy"
            column="changed_by"
            type="java.lang.String"
            not-null="false"
            length="40"/>
            
        <property
            name="credit"
            column="credit"
            type="java.lang.String"
            not-null="false"
            length="10"/>
            
		<property
            name="course"
            column="course"
            type="java.lang.String"
            not-null="false"
            length="1024"/>

        <many-to-one
            name="courseOffering"
            class="CourseOffering"
            column="course_offering_id"
            foreign-key="fk_advisor_crsreq_course"
            not-null="false"/>

		<property
            name="notes"
            column="notes"
            type="java.lang.String"
            not-null="false"
            length="2048"/>
            
        <property
            name="critical"
            column="critical"
            type="java.lang.Integer"
            not-null="false"/>

        <property
            name="waitlist"
            column="waitlist"
            type="java.lang.Boolean"
            not-null="false"/>
            
        <property
            name="noSub"
            column="nosub"
            type="java.lang.Boolean"
            not-null="false"/>

		<set
            name="preferences"
            table="sect_pref"
            inverse="true"
            cascade="all">

            <cache include="non-lazy" usage="transactional"/>
            <key column="request_id" foreign-key="fk_adv_pref_request"/>
            <one-to-many class="AdvisorSectioningPref"/>
        </set>
        
        <many-to-one
            name="freeTime"
            class="FreeTime"
            column="free_time_id"
            foreign-key="fk_advisor_crsreq_free"
            not-null="false"/>
    </class>

    <class name="AdvisorSectioningPref" table="advisor_sect_pref" abstract="true" discriminator-value="-1">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>

        <discriminator column="preference_type" type="java.lang.Integer"/>
        
        <property
            name="label"
            column="label"
            type="string"
            not-null="false"
            length="60"/>
        
        <many-to-one
            name="courseRequest"
            class="AdvisorCourseRequest"
            column="request_id"
            not-null="true"
            foreign-key="fk_adv_pref_request"/>

        <property
            name="required"
            column="required"
            type="java.lang.Boolean"
            not-null="true"/>

        <subclass
            name="AdvisorClassPref"
            abstract="false"
            discriminator-value="0">
            
            <many-to-one
                name="clazz"
                class="Class_"
                column="class_id"
                not-null="true"
                foreign-key="fk_adv_pref_class"/>
	    </subclass>
	    
        <subclass
            name="AdvisorInstrMthPref"
            abstract="false"
            discriminator-value="1">
            
            <many-to-one
                name="instructionalMethod"
                class="InstructionalMethod"
                column="instr_mthd_id"
                not-null="true"
                foreign-key="fk_adv_pref_im"/>
	    </subclass>
    </class>
</hibernate-mapping>
