<hibernate-mapping package="org.unitime.timetable.model">
    <class name="StudentSectioningPref" table="sect_pref" abstract="true" discriminator-value="-1">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>

        <discriminator column="preference_type" type="java.lang.Integer"/>
        
        <property
            name="label"
            column="label"
            type="string"
            not-null="false"
            length="60"/>
        
        <many-to-one
            name="courseRequest"
            class="CourseRequest"
            column="request_id"
            not-null="true"
            foreign-key="fk_sct_pref_request"/>

        <property
            name="required"
            column="required"
            type="java.lang.Boolean"
            not-null="true"/>

        <subclass
            name="StudentClassPref"
            abstract="false"
            discriminator-value="0">
            
            <many-to-one
                name="clazz"
                class="Class_"
                column="class_id"
                not-null="true"
                foreign-key="fk_sct_pref_class"/>
	    </subclass>
	    
        <subclass
            name="StudentInstrMthPref"
            abstract="false"
            discriminator-value="1">
            
            <many-to-one
                name="instructionalMethod"
                class="InstructionalMethod"
                column="instr_mthd_id"
                not-null="true"
                foreign-key="fk_sct_pref_im"/>
	    </subclass>
    </class>
</hibernate-mapping>
